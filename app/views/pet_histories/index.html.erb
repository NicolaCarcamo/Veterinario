<p id="notice"><%= notice %></p>

<%= link_to 'Pet list', client_pets_path(@client, @pets) %>
<h1>Pet Histories</h1>

<table>
  <thead>
    <tr>
      <th>Weight</th>
      <th>Heigth</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pet_histories.each do |pet_history| %>
      <tr>
        <td><%= pet_history.weight %></td>
        <td><%= pet_history.height %></td>
        <td><%= pet_history.description %></td>
        <td><%= link_to 'Show', client_pet_pet_history_path(@client, @pet, pet_history) %></td>
        <td><%= link_to 'Edit', edit_client_pet_pet_history_path(@client, @pet, pet_history) %></td>
        <td><%= link_to 'Destroy', client_pet_pet_history_path(@client, @pet, pet_history), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet History', new_client_pet_pet_history_path(@client, @pet) %>
